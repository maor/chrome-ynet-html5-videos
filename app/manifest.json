{
    "name": "__MSG_appName__",
    "version": "0.0.47",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
    "web_accessible_resources": [
        "scripts/libs/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": [
                "http://*.ynet.co.il/*",
                "http://ynet.co.il/*",
                "https://*.ynet.co.il/*"
            ],
            "js": [
                "bower_components/jquery/dist/jquery.min.js",
                "scripts/libs/fp/flowplayer.js",
                "scripts/rashi.js"
            ],
            "css": [
                "scripts/libs/fp/skin/minimalist.css"
            ]
        }
    ]
}